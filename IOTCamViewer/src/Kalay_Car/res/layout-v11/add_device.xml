<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/touch_layout"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/bg"
                android:focusableInTouchMode="true"
                android:orientation="vertical">

    <ScrollView
        android:id="@+id/uidlayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="@string/txtUID"
                    android:textColor="@color/app_style_color"/>

                <EditText
                    android:id="@+id/edtUID"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="right"
                    android:maxLength="20"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textCursorDrawable="@null"
                    android:textColorHint="@color/white"
                    android:textSize="13dp"/>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/app_style_color"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_marginBottom="15dp"
                android:background="@color/app_style_color"/>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/txtPassword"
                    android:textColor="@color/app_style_color"
                    android:singleLine="true"/>

                <EditText
                    android:id="@+id/edtSecurityCode"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="right"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textColor="#000000"
                    android:textCursorDrawable="@null"
                    android:textColorHint="#000000"/>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="10dp"
                android:background="@color/app_style_color"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_marginBottom="15dp"
                android:background="@color/app_style_color"/>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:text="@string/txtName"
                    android:textColor="@color/app_style_color"/>

                <EditText
                    android:id="@+id/edtNickName"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="#00000000"
                    android:gravity="right"
                    android:singleLine="true"
                    android:maxLength="30"
                    android:text="Camera"
                    android:textColor="#000000"
                    android:textCursorDrawable="@null"
                    android:textColorHint="@color/white"/>
            </LinearLayout>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.1dp"
                android:layout_marginTop="10dp"
                android:background="@color/app_style_color"/>

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="0.7dp"
                android:layout_marginBottom="15dp"
                android:background="@color/app_style_color"/>

            <LinearLayout
                android:id="@+id/layoutAP"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="4"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_apssid"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtAPSSID"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:hint="@string/hint_Deviece_SSID"
                        android:maxLength="32"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textCursorDrawable="@null"
                        android:textSize="13dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/app_style_color"/>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/app_style_color"/>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_weight="4"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_password"/>
                    </LinearLayout>

                    <EditText
                        android:id="@+id/edtAPPWD"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:background="#00000000"
                        android:hint="@string/hint_Deviece_Pwd"
                        android:inputType="textPassword"
                        android:singleLine="true"
                        android:textColor="#000000"
                        android:textCursorDrawable="@null"
                        android:textSize="13dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.1dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/app_style_color"/>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0.7dp"
                    android:layout_marginBottom="15dp"
                    android:background="@color/app_style_color"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutWIFISettings"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/layoutSettings"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:background="@color/app_style_color">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_centerVertical="true"
                        android:text="@string/txt_wifi_settings"
                        android:textColor="#FFFFFF"
                        android:singleLine="true"/>

                    <ImageView
                        android:id="@+id/imgArrow"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/wifi_setting_info"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/tvTips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:singleLine="true"
                    android:text="@string/tips_add_dev_wifi"
                    android:textSize="10sp"
                    android:textColor="@color/line_black"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layoutWIFI"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layoutWIFISSID"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="4"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_wifi"/>
                        </LinearLayout>

                        <RelativeLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1">

                            <ImageView
                                android:id="@+id/imgSSID"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:background="@drawable/btn_next"/>

                            <TextView
                                android:id="@+id/tvSSID"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent"
                                android:layout_toLeftOf="@+id/imgSSID"
                                android:background="#00000000"
                                android:maxLength="32"
                                android:singleLine="true"
                                android:textColor="#000000"
                                android:textColorHint="@color/white"
                                android:textSize="13dp"/>

                        </RelativeLayout>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/app_style_color"/>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="0.7dp"
                        android:layout_marginBottom="15dp"
                        android:background="@color/app_style_color"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layoutWIFIPwd"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_weight="4"
                            android:gravity="center">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ic_password"/>
                        </LinearLayout>

                        <EditText
                            android:id="@+id/edtWifiPWD"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="10dp"
                            android:layout_weight="1"
                            android:background="#00000000"
                            android:hint="@string/hint_WIFI_Pwd"
                            android:inputType="textPassword"
                            android:singleLine="true"
                            android:textColor="#000000"
                            android:textCursorDrawable="@null"
                            android:textSize="13dp"/>
                    </LinearLayout>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="0.1dp"
                        android:layout_marginTop="10dp"
                        android:background="@color/app_style_color"/>

                    <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="0.7dp"
                        android:background="@color/app_style_color"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnOK"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:background="@drawable/btn_nfc_connect"
        android:text="@string/txt_connect"
        android:textColor="@color/app_style_color"/>

</RelativeLayout>