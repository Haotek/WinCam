<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" 
	android:layout_height="wrap_content"
	android:id="@+id/about_layout"  
	android:orientation="vertical"
	android:background="@drawable/bg_dialogue" >
	
	<TextView 
	    android:id="@+id/txtLogo" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:gravity="center" 
		android:textSize="22sp" 
		android:textStyle="bold"
		android:textColor="#FFFFFF"
		android:text="@string/app_name" 
		android:layout_marginTop="3dp" />
		  		  
	<TextView 
	    android:id="@+id/txtVersion" 
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="#FFFFFF" 
		android:text=""

		android:gravity="center" 
		android:layout_marginTop="3dp" />

	<ImageView
	    android:layout_width="wrap_content"
	    android:layout_height="24dp"
	    android:contentDescription="" />

	<LinearLayout
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content" 
	   	android:gravity="center"
		android:visibility="invisible">

		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#FFFFFF"
		    android:text="IOTCAPIs: "
			android:visibility="invisible" />

		<TextView
		    android:id="@+id/txtIOTCAPIs"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#FFFFFF"
		    android:text=""
			android:visibility="invisible" />

	</LinearLayout>

	<LinearLayout
	    android:layout_width="fill_parent"
	   	android:gravity="center"
	    android:layout_height="wrap_content"
		android:visibility="invisible">

		<TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#FFFFFF"
		    android:text="AVAPIs: "
			android:visibility="invisible" />

		<TextView
		    android:id="@+id/txtAVAPIs"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:textColor="#FFFFFF"
		    android:text=""
			android:visibility="invisible" />

	</LinearLayout>
	
	<ImageView
	    android:layout_width="wrap_content"
	    android:layout_height="24dp" />	
		  
	<TextView 
	    android:id="@+id/txtCopyright" 
	    android:layout_width="fill_parent"
		android:layout_height="wrap_content" 
		android:text="@string/txtCopyRightInfo"
		android:gravity="center"
		android:textColor="#FFFFFF" 
		android:textStyle="bold" />
	
	<Button 
	    android:layout_width="fill_parent"
		android:layout_height="0.2dp"
		android:layout_marginTop="20dp"
		android:layout_marginLeft="10dp"
		android:layout_marginRight="10dp"
		android:background="#FFFFFF" />
	
	<Button 
	    android:id="@+id/btnOK" 
	    android:layout_width="fill_parent"
		android:layout_height="match_parent"
		android:layout_marginTop="5dp"
		android:layout_marginBottom="5dp"
		android:background="@drawable/btn_switch_dialog"
		android:text="@string/ok"
		android:textColor="@drawable/txt_color_dialog"
		android:textStyle="bold" />

</LinearLayout>
