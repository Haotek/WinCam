<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_silver_light_corner"
    android:padding="10dp">


    <TextView
        android:id="@+id/function"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="2dp"
        android:textColor="#000000"
        android:textSize="16sp"
        tools:text="Function" />

    <ImageButton
        android:id="@+id/expand"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#00000000"
        android:scaleType="fitEnd"
        android:src="@drawable/btn_next" />



    <ImageView
        android:layout_below="@id/function"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="15dp"
		android:background="@color/app_style_color"/>

<!--android:background="#F7B52C"-->
    <RelativeLayout
        android:id="@+id/layout_expand"
        android:layout_below="@id/function"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        android:padding="10dp"
        android:visibility="gone"
        tools:visibility="visible">
        <Button
            android:id="@+id/btnfunction"
            android:layout_width="fill_parent"
            android:textSize="16sp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_settings"
            tools:text="FunctionDo" />
    </RelativeLayout>


</RelativeLayout>