<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#EFEFF4" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_silver_light_corner"
        android:orientation="vertical"
        android:layout_marginTop="30dp"
        android:padding="10dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="@string/txtFTPServer"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etServer"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:inputType="textUri"
                android:singleLine="true"
                android:textColor="#000000"
                android:textCursorDrawable="@null"/>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="10dp"
            android:background="#C8C9CA" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.7dp"
            android:layout_marginBottom="15dp"
            android:background="#C8C9CA" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="@string/txtPort"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etPort"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="#000000"
                android:textCursorDrawable="@null"/>
        </LinearLayout>
        
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="10dp"
            android:background="#C8C9CA" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.7dp"
            android:layout_marginBottom="15dp"
            android:background="#C8C9CA" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="@string/txtAccount"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etAcc"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="#000000"
                android:textCursorDrawable="@null"/>
        </LinearLayout>

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="10dp"
            android:background="#C8C9CA" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.7dp"
            android:layout_marginBottom="15dp"
            android:background="#C8C9CA" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="@string/txtPassword"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etPwd"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:inputType="textPassword"
                android:singleLine="true"
                android:textColor="#000000"
                android:textCursorDrawable="@null"/>
        </LinearLayout>
        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.1dp"
            android:layout_marginTop="10dp"
            android:background="#C8C9CA" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="0.7dp"
            android:layout_marginBottom="15dp"
            android:background="#C8C9CA" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:text="@string/txtPath"
                android:textColor="#000000" />

            <EditText
                android:id="@+id/etPath"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#00000000"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="#000000"
                android:textCursorDrawable="@null"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>